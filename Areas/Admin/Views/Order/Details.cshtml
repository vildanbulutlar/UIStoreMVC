@using Application.DTOs.OrderDTOs
@model OrderDto

@{
    ViewData["Title"] = $"Sipariş Detayı #{Model.Id}";
}

<div class="card shadow-sm border-0 admin-card">
    <div class="card-body">

        <!-- ÜST BİLGİ -->
        <div class="d-flex justify-content-between">
            <div>
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-receipt-cutoff me-1"></i> Sipariş #@Model.Id
                </h3>

                <p class="text-muted small mb-1">
                    Tarih: @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
                </p>

                <p class="text-muted small">
                    Müşteri: <strong>@Model.CustomerFullName</strong>
                </p>
            </div>

            <div class="text-end">
                <span class="badge bg-info text-dark px-3 py-2">@Model.Status</span>

                <div class="mt-2">
                    <a class="btn btn-outline-secondary btn-sm"
                       asp-area="Admin"
                       asp-controller="Order"
                       asp-action="Index">
                        ← Listeye Dön
                    </a>
                </div>
            </div>
        </div>

        <hr />

        <!-- ÜRÜN SATIRLARI -->
        <h5 class="fw-semibold mb-3">Sipariş Kalemleri</h5>

        <table class="table table-hover align-middle bg-white">
            <thead>
                <tr>
                    <th>Ürün</th>
                    <th class="text-center" style="width:120px;">Adet</th>
                    <th class="text-end">Birim Fiyat</th>
                    <th class="text-end">Ara Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                        <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- GENEL TOPLAM -->
        <div class="text-end mt-3">
            <div class="fw-semibold">Genel Toplam:</div>
            <div class="fs-4 fw-bold text-success">
                @Model.TotalPrice.ToString("C")
            </div>
        </div>

    </div>
</div>
