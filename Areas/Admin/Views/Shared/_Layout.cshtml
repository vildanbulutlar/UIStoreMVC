<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MomDev Studio Admin</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <style>
        body {
            background: #f4f6fb;
        }

        .admin-navbar {
            background: linear-gradient(90deg, #6c63ff, #4e73df);
        }

            .admin-navbar .navbar-brand {
                font-weight: 700;
                letter-spacing: 0.5px;
            }

            .admin-navbar .nav-link {
                font-weight: 500;
                opacity: 0.9;
            }

                .admin-navbar .nav-link:hover {
                    opacity: 1;
                }

        .admin-wrapper {
            padding: 2rem 1rem;
        }

        .admin-card {
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            background: #ffffff;
            border-top: 1px solid #e0e0e0;
        }

            footer p {
                margin: 0;
                font-size: 0.9rem;
                color: #6c757d;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark admin-navbar shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "Admin" })">
                <i class="bi bi-code-slash me-2"></i>
                MomDev Studio · Admin
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Category", new { area = "Admin" })">
                            <i class="bi bi-tags me-1"></i>Kategoriler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Product", new { area = "Admin" })">
                            <i class="bi bi-box-seam me-1"></i>Ürünler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Order", new { area = "Admin" })">
                            <i class="bi bi-receipt me-1"></i>Siparişler
                        </a>
                    </li>

                    <!-- 📨 Ajans Başvuruları -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "AgencyApplication", new { area = "Admin" })">
                            <i class="bi bi-building-gear me-1"></i>Ajans Başvuruları
                        </a>
                    </li>

                    <!-- 🛒 Terk Edilmiş Sepetler -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Abandoned", "Cart", new { area = "Admin" })">
                            <i class="bi bi-bag-dash me-1"></i>Terk Edilmiş Sepetler
                        </a>
                    </li>
                </ul>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-light btn-sm" type="submit">
                        <i class="bi bi-box-arrow-right me-1"></i> Çıkış Yap
                    </button>
                </form>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container admin-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="py-3 text-center">
        <p>© @DateTime.Now.Year MomDev Studio Admin · Tüm hakları saklıdır.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
