@using Application.DTOs.CategoryDTOs
@model CreateCategoryDto

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="card shadow-sm border-0 admin-card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="fw-bold text-primary mb-1">
                    <i class="bi bi-plus-circle me-2"></i> Yeni Kategori Ekle
                </h2>
                <p class="text-muted small mb-0">
                    Mağazaya yeni bir kategori ekleyin.
                </p>
            </div>

            <a class="btn btn-outline-secondary"
               asp-area="Admin" asp-controller="Category" asp-action="Index">
                <i class="bi bi-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger d-flex align-items-center">
                <i class="bi bi-x-circle-fill me-2"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-area="Admin"
              asp-controller="Category"
              asp-action="Create"
              method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Kategori Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Örn: Programlama Kitapları" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save2-fill me-1"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
