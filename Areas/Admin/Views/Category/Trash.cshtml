@using Application.DTOs.CategoryDTOs
@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Silinen Kategoriler (Çöp Kutusu)";
}

<div class="card shadow-sm border-0 admin-card">
    <div class="card-body">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="fw-bold text-danger mb-1">
                    <i class="bi bi-trash3-fill me-2"></i> Çöp Kutusu
                </h2>
                <p class="text-muted small mb-0">
                    Soft delete yapılan kategorileri buradan geri yükleyebilir veya kalıcı silebilirsiniz.
                </p>
            </div>

            <a class="btn btn-outline-primary"
               asp-area="Admin" asp-controller="Category" asp-action="Index">
                <i class="bi bi-arrow-left me-1"></i> Kategori Listesi
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger d-flex align-items-center">
                <i class="bi bi-x-circle-fill me-2"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        @if (Model.Any())
        {
            <div class="table-responsive mt-3">
                <table class="table table-hover align-middle bg-white mb-0">
                    <thead>
                        <tr>
                            <th style="width: 60px;">#</th>
                            <th>Kategori Adı</th>
                            <th class="text-end" style="width: 220px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td class="fw-bold">@category.Id</td>
                                <td>@category.Name</td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <form asp-area="Admin"
                                              asp-controller="Category"
                                              asp-action="Restore"
                                              method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@category.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-success btn-sm"
                                                    onclick="return confirm('Bu kategoriyi geri yüklemek istiyor musunuz?')">
                                                <i class="bi bi-arrow-counterclockwise me-1"></i> Geri Yükle
                                            </button>
                                        </form>

                                        <form asp-area="Admin"
                                              asp-controller="Category"
                                              asp-action="HardDelete"
                                              method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@category.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Bu kategoriyi KALICI olarak silmek istiyor musunuz? Bu işlem geri alınamaz!')">
                                                <i class="bi bi-x-circle me-1"></i> Kalıcı Sil
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-trash display-1 text-muted"></i>
                <h4 class="text-muted">Çöp kutusu boş</h4>
                <p class="text-muted">Silinmiş kategori bulunmuyor.</p>
            </div>
        }
    </div>
</div>
