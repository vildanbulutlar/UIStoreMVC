@using UIStoreMVC.Areas.Admin.Models
@using System.Text.Json
@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4 admin-dashboard">

    <!-- ÜST İSTATİSTİK KARTLARI -->
    <div class="row g-3 mb-4">
        <!-- Toplam Ürün -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card stat-card-blue">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h6 class="stat-title">TOPLAM ÜRÜN</h6>
                        <div class="d-flex align-items-baseline gap-2">
                            <span class="stat-value">@Model.TotalProduct</span>
                            <span class="stat-change text-success">
                                ↑ @Model.TotalProductChangeRate.ToString("0")%
                            </span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                </div>
                <div class="stat-bar">
                    <div class="stat-bar-inner"></div>
                </div>
            </div>
        </div>

        <!-- Toplam Kategori -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card stat-card-green">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h6 class="stat-title">TOPLAM KATEGORİ</h6>
                        <div class="d-flex align-items-baseline gap-2">
                            <span class="stat-value">@Model.TotalCategory</span>
                            <span class="stat-change text-success">
                                ↑ @Model.TotalCategoryChangeRate.ToString("0")%
                            </span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-tags"></i>
                    </div>
                </div>
                <div class="stat-bar">
                    <div class="stat-bar-inner"></div>
                </div>
            </div>
        </div>

        <!-- Toplam Sipariş -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card stat-card-amber">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h6 class="stat-title">TOPLAM SİPARİŞ</h6>
                        <div class="d-flex align-items-baseline gap-2">
                            <span class="stat-value">@Model.TotalOrder</span>
                            <span class="stat-change text-success">
                                ↑ @Model.TotalOrderChangeRate.ToString("0")%
                            </span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                </div>
                <div class="stat-bar">
                    <div class="stat-bar-inner"></div>
                </div>
            </div>
        </div>

        <!-- Toplam Kullanıcı -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="stat-card stat-card-red">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h6 class="stat-title">TOPLAM KULLANICI</h6>
                        <div class="d-flex align-items-baseline gap-2">
                            <span class="stat-value">@Model.TotalUser</span>
                            <span class="stat-change text-success">
                                ↑ @Model.TotalUserChangeRate.ToString("0")%
                            </span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
                <div class="stat-bar">
                    <div class="stat-bar-inner"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- GRAFİKLER SATIRI -->
    <div class="row g-3 mb-4">
        <!-- Son 7 Günlük Sipariş Trendi -->
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="card-title mb-1">
                                <i class="bi bi-graph-up me-1"></i> Son 7 Günlük Sipariş Trendi
                            </h5>
                            <small class="text-muted">Günlük sipariş sayısı dağılımı</small>
                        </div>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary active">Haftalık</button>
                            <button class="btn btn-outline-secondary">Aylık</button>
                        </div>
                    </div>
                    <canvas id="ordersLineChart" height="90"></canvas>
                </div>
            </div>
        </div>

        <!-- Sipariş Durum Dağılımı -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-1">
                        <i class="bi bi-pie-chart me-1"></i> Sipariş Durum Dağılımı
                    </h5>
                    <small class="text-muted">Tamamlanan / iptal edilen sipariş oranı</small>
                    <div class="mt-3">
                        <canvas id="orderStatusChart" height="190"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ALT SATIR -->
    <div class="row g-3">
        <!-- Son Siparişler -->
        <div class="col-12 col-xl-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="card-title mb-1">
                                <i class="bi bi-clock-history me-1"></i> Son Siparişler
                            </h5>
                            <small class="text-muted">Son 5 siparişin detaylı görünümü</small>
                        </div>
                        <a asp-area="Admin" asp-controller="Order" asp-action="Index"
                           class="btn btn-sm btn-primary">
                            Tümünü Gör
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>SİPARİŞ NO</th>
                                    <th>MÜŞTERİ</th>
                                    <th>TARİH</th>
                                    <th>TUTAR</th>
                                    <th>DURUM</th>
                                    <th class="text-end">İŞLEMLER</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentOrders == null || !Model.RecentOrders.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            Henüz sipariş bulunmuyor.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>#@order.OrderId</td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@order.TotalPrice.ToString("C")</td>
                                            <td>
                                                <span class="badge rounded-pill bg-light text-dark px-3">
                                                    <span class="status-dot me-1"></span>
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-area="Admin" asp-controller="Order"
                                                       asp-action="Details" asp-route-id="@order.OrderId"
                                                       class="btn btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="Order"
                                                       asp-action="Edit" asp-route-id="@order.OrderId"
                                                       class="btn btn-outline-success">
                                                        <i class="bi bi-truck"></i>
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="Order"
                                                       asp-action="Cancel" asp-route-id="@order.OrderId"
                                                       class="btn btn-outline-danger">
                                                        <i class="bi bi-x-circle"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Kolon -->
        <div class="col-12 col-xl-4">
            <!-- En Çok Satanlar -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-1">
                        <i class="bi bi-award me-1"></i> En Çok Satan Ürünler
                    </h5>
                    <small class="text-muted">İlk 5 ürün</small>

                    <div class="mt-3">
                        @if (Model.TopProducts == null || !Model.TopProducts.Any())
                        {
                            <p class="text-muted mb-0 small">Henüz veri yok.</p>
                        }
                        else
                        {
                            foreach (var p in Model.TopProducts)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-semibold">@p.Name</span>
                                        <span class="text-muted small">@p.Quantity adet</span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar" role="progressbar"
                                             style="width:@p.PercentOfTotal%;"
                                             aria-valuenow="@p.PercentOfTotal"
                                             aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between small text-muted mt-1">
                                        <span>Ciro:</span>
                                        <span>@p.TotalAmount.ToString("C")</span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Bekleyen İşler -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-2">
                        <i class="bi bi-list-check me-1"></i> Bekleyen İşler
                    </h5>
                    <ul class="list-unstyled mb-0 small">
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span>Onay bekleyen siparişler</span>
                            <span class="badge rounded-pill bg-warning-subtle text-warning">
                                @Model.PendingOrderCount
                            </span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span>Stokta az kalan ürünler</span>
                            <span class="badge rounded-pill bg-danger-subtle text-danger">
                                @Model.LowStockProductCount
                            </span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span>Bugün yeni kayıt olan kullanıcı</span>
                            <span class="badge rounded-pill bg-success-subtle text-success">
                                @Model.NewCustomerCountToday
                            </span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center">
                            <span>İade / iptal talebi</span>
                            <span class="badge rounded-pill bg-info-subtle text-info">
                                @Model.RefundRequestCount
                            </span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Aktivite Timeline -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-2">
                        <i class="bi bi-activity me-1"></i> Son Aktiviteler
                    </h5>
                    <ul class="timeline list-unstyled mb-0 small">
                        @if (Model.LatestActivities == null || !Model.LatestActivities.Any())
                        {
                            <li class="text-muted">Henüz aktivite yok.</li>
                        }
                        else
                        {
                            foreach (var a in Model.LatestActivities)
                            {
                                <li class="timeline-item">
                                    <div class="timeline-point"></div>
                                    <div class="timeline-content">
                                        <span class="timeline-time">@a.Time.ToString("HH:mm")</span>
                                        <p class="mb-0">@a.Description</p>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .admin-dashboard {
            background: #f3f5fc;
        }

        .stat-card {
            border-radius: 18px;
            padding: 16px 18px;
            background: #ffffff;
            box-shadow: 0 4px 18px rgba(15, 23, 42, 0.06);
            transition: transform 0.18s ease, box-shadow 0.18s ease;
            cursor: default;
        }

            .stat-card:hover {
                transform: translateY(-2px) scale(1.01);
                box-shadow: 0 10px 25px rgba(15, 23, 42, 0.12);
            }

        .stat-title {
            font-size: .78rem;
            letter-spacing: .06em;
            text-transform: uppercase;
            color: #6b7280;
            margin-bottom: 4px;
        }

        .stat-value {
            font-size: 1.6rem;
            font-weight: 700;
        }

        .stat-change {
            font-size: .85rem;
        }

        .stat-icon {
            width: 42px;
            height: 42px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.7);
            font-size: 1.3rem;
        }

        .stat-card-blue {
            background: linear-gradient(135deg,#eef2ff,#dbeafe);
        }

        .stat-card-green {
            background: linear-gradient(135deg,#ecfdf3,#dcfce7);
        }

        .stat-card-amber {
            background: linear-gradient(135deg,#fffbeb,#fef3c7);
        }

        .stat-card-red {
            background: linear-gradient(135deg,#fef2f2,#fee2e2);
        }

        .stat-bar {
            margin-top: 10px;
            height: 4px;
            border-radius: 999px;
            background: rgba(148, 163, 184, 0.3);
            overflow: hidden;
        }

        .stat-bar-inner {
            width: 70%;
            height: 100%;
            border-radius: inherit;
            background: rgba(37, 99, 235, 0.9);
            animation: statBarAnim 1.2s ease-out;
        }

        @@keyframes statBarAnim {
            from

        {
            width: 0;
        }

        to {
            width: 70%;
        }

        }

        .status-dot {
            display: inline-block;
            width: 8px;
            height: 8px;
            border-radius: 999px;
            background: #22c55e;
        }

        .timeline {
            position: relative;
            padding-left: 1.2rem;
        }

            .timeline::before {
                content: "";
                position: absolute;
                left: 4px;
                top: 0;
                bottom: 0;
                width: 2px;
                background: #e5e7eb;
            }

        .timeline-item {
            position: relative;
            margin-bottom: 10px;
        }

        .timeline-point {
            position: absolute;
            left: -2px;
            top: 4px;
            width: 10px;
            height: 10px;
            border-radius: 999px;
            background: #4f46e5;
            box-shadow: 0 0 0 3px rgba(129, 140, 248, 0.3);
        }

        .timeline-content {
            margin-left: 14px;
        }

        .timeline-time {
            font-size: .75rem;
            color: #9ca3af;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const orderLabels = @Html.Raw(JsonSerializer.Serialize(
                    Model.Last7DaysOrders.Select(x => x.DayLabel)
            ));

    const orderData = @Html.Raw(JsonSerializer.Serialize(
                Model.Last7DaysOrders.Select(x => x.OrderCount)
        ));

    const statusLabels = @Html.Raw(JsonSerializer.Serialize(
                Model.OrderStatusDistribution.Select(x => x.StatusName)
        ));

    const statusData = @Html.Raw(JsonSerializer.Serialize(
                Model.OrderStatusDistribution.Select(x => x.Count)
        ));

    // Line Chart
    const ordersLineCtx = document.getElementById('ordersLineChart').getContext('2d');
    new Chart(ordersLineCtx, {
        type: 'line',
        data: {
            labels: orderLabels,
            datasets: [{
                label: 'Sipariş',
                data: orderData,
                tension: 0.4,
                fill: false,
                borderWidth: 2,
                pointRadius: 3
            }]
        },
        options: {
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, ticks: { precision: 0 } }
            }
        }
    });

        // Doughnut Chart
        const statusCtx = document.getElementById('orderStatusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: statusLabels,
                datasets: [{
                    data: statusData
                }]
            },
            options: {
                plugins: { legend: { position: 'bottom' } },
                cutout: '65%'
            }
        });
    </script>
}
