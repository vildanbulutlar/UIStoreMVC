@{
    ViewData["Title"] = "VIP Üyelik";
}

<div class="container py-3 py-lg-4 vip-page">

    <!-- Başlık -->
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2 mb-3">
        <div>
            <h2 class="fw-bold mb-1 vip-h2">VIP Üyelik</h2>
            <div class="text-muted vip-sub">Güvenli ödeme ile VIP ayrıcalıklarını hemen aktif et.</div>
        </div>

        <a class="btn btn-outline-secondary rounded-pill btn-sm"
           asp-controller="Membership" asp-action="Index">
            <i class="bi bi-arrow-left me-1"></i> Üyeliklerime dön
        </a>
    </div>

    <div class="row g-3 align-items-start">

        <!-- SOL: Paket Kartı -->
        <div class="col-12 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden vip-card">
                <div class="vip-card-top p-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-2">
                            <span class="vip-icon">
                                <i class="bi bi-gem"></i>
                            </span>
                            <div>
                                <div class="small text-muted">Plan</div>
                                <div class="fw-bold">Parabola VIP</div>
                            </div>
                        </div>

                        <span class="badge rounded-pill text-bg-primary px-2 py-1 small">
                            EN POPÜLER
                        </span>
                    </div>

                    <div class="mt-3">
                        <div class="d-flex align-items-end gap-2">
                            <div class="fw-bold vip-price">199</div>
                            <div class="text-muted vip-per">₺ / ay</div>
                        </div>

                        <div class="text-muted small mt-1">
                            VIP ile sepette otomatik ekstra indirim kazanırsın ✨
                        </div>
                    </div>
                </div>

                <div class="p-3">
                    <div class="fw-semibold mb-2">VIP Paket İçeriği</div>

                    <div class="row g-2">
                        <div class="col-12">
                            <div class="benefit">
                                <span class="b-icon"><i class="bi bi-percent"></i></span>
                                <div>
                                    <div class="fw-semibold">%15 ek indirim</div>
                                    <div class="text-muted small">Seçili ürünlerde ekstra avantaj</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="benefit">
                                <span class="b-icon"><i class="bi bi-truck"></i></span>
                                <div>
                                    <div class="fw-semibold">Ücretsiz / indirimli kargo</div>
                                    <div class="text-muted small">Daha hızlı ve daha uygun</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="benefit">
                                <span class="b-icon"><i class="bi bi-headset"></i></span>
                                <div>
                                    <div class="fw-semibold">Öncelikli destek</div>
                                    <div class="text-muted small">Sorularına daha hızlı dönüş</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="benefit">
                                <span class="b-icon"><i class="bi bi-gift"></i></span>
                                <div>
                                    <div class="fw-semibold">Özel kampanya ve hediyeler</div>
                                    <div class="text-muted small">Sürpriz fırsatlar 🎁</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-3" />

                    <div class="small text-muted">
                        * Bu ekran demo amaçlıdır, gerçek ödeme alınmamaktadır.
                    </div>
                </div>
            </div>
        </div>

        <!-- SAĞ: Ödeme Formu -->
        <div class="col-12 col-lg-7">
            <div class="card border-0 shadow-sm rounded-4 p-3">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div>
                        <h5 class="fw-bold mb-1 vip-h5">Ödeme Bilgileri</h5>
                        <div class="text-muted small">Kart bilgilerini gir ve VIP’i aktif et.</div>
                    </div>
                    <span class="secure-pill">
                        <i class="bi bi-shield-lock me-1"></i> Güvenli işlem
                    </span>
                </div>

                <!-- Kredi Kartı Önizleme -->
                <div class="pay-card mb-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="text-white-50 small">MomDev Atelier</div>
                        <i class="bi bi-credit-card-2-front text-white"></i>
                    </div>

                    <div class="mt-3 text-white fw-semibold cardNumberPreview">
                        •••• •••• •••• ••••
                    </div>

                    <div class="d-flex justify-content-between align-items-end mt-2">
                        <div>
                            <div class="text-white-50 small">Kart Sahibi</div>
                            <div class="text-white cardNamePreview">AD SOYAD</div>
                        </div>
                        <div class="text-end">
                            <div class="text-white-50 small">SKT</div>
                            <div class="text-white cardExpPreview">AA/YY</div>
                        </div>
                    </div>
                </div>

                <form asp-action="BuyVip" method="post">
                    <div class="row g-2">

                        <div class="col-12">
                            <label class="form-label mb-1 small text-muted">Kart Üzerindeki İsim</label>
                            <input id="cardName" type="text" class="form-control form-control-sm"
                                   placeholder="Ad Soyad" autocomplete="cc-name" />
                        </div>

                        <div class="col-12">
                            <label class="form-label mb-1 small text-muted">Kart Numarası</label>
                            <input id="cardNumber" type="text" class="form-control form-control-sm"
                                   placeholder="1234 5678 9012 3456" autocomplete="cc-number" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label mb-1 small text-muted">Son Kullanma Tarihi</label>
                            <input id="cardExp" type="text" class="form-control form-control-sm"
                                   placeholder="AA/YY" autocomplete="cc-exp" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label mb-1 small text-muted">CVV</label>
                            <input type="password" class="form-control form-control-sm"
                                   placeholder="123" autocomplete="cc-csc" />
                        </div>

                        <div class="col-12 mt-2">
                            <div class="alert alert-primary border-0 rounded-4 d-flex align-items-start gap-2 py-2 mb-0">
                                <i class="bi bi-stars mt-1"></i>
                                <div class="small">
                                    VIP aktif olunca ürün detayında “VIP” etiketi ve sepette otomatik indirim gösterebilirsin.
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-2">
                            <button type="submit" class="btn btn-primary w-100 rounded-4 vip-pay-btn">
                                <i class="bi bi-lightning-charge me-2"></i>
                                199 ₺ Öde ve VIP Ol
                            </button>

                            <div class="text-muted small text-center mt-2">
                                Satın alma sonrası üyelik durumun otomatik güncellenir.
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<style>
    /* ---- VIP Sayfa Stilleri (daha kompakt) ---- */
    .vip-page {
        --vipText: .95rem;
        font-size: var(--vipText);
    }

    .vip-h2 {
        font-size: 1.55rem;
    }

    .vip-sub {
        font-size: .95rem;
    }

    .vip-h5 {
        font-size: 1.05rem;
    }

    .vip-card-top {
        background: linear-gradient(180deg, rgba(13,110,253,.12) 0%, rgba(13,110,253,.05) 55%, rgba(255,255,255,1) 100%);
    }

    .vip-icon {
        width: 38px;
        height: 38px;
        border-radius: 14px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: rgba(13,110,253,.12);
        color: #0d6efd;
        font-size: 1rem;
    }

    .vip-price {
        font-size: 2.15rem;
        line-height: 1;
    }

    .vip-per {
        font-size: .95rem;
        margin-bottom: .2rem;
    }

    .benefit {
        display: flex;
        gap: 10px;
        align-items: center;
        padding: 10px;
        border: 1px solid rgba(0,0,0,.06);
        border-radius: 16px;
        background: #fff;
    }

    .b-icon {
        width: 36px;
        height: 36px;
        border-radius: 14px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: rgba(13,110,253,.10);
        color: #0d6efd;
        flex: 0 0 auto;
        font-size: .95rem;
    }

    .secure-pill {
        display: inline-flex;
        align-items: center;
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(25,135,84,.10);
        color: #198754;
        font-size: .8rem;
        border: 1px solid rgba(25,135,84,.18);
        white-space: nowrap;
    }

    .pay-card {
        border-radius: 20px;
        padding: 14px 14px 12px 14px;
        background: radial-gradient(1200px 300px at 20% 20%, rgba(255,255,255,.16), transparent 40%), linear-gradient(135deg, #0d6efd 0%, #3f7cff 50%, #6ea8fe 100%);
        box-shadow: 0 12px 30px rgba(13,110,253,.18);
        min-height: 140px;
    }

    .vip-pay-btn {
        padding: .75rem 1rem; /* btn-lg yerine daha kompakt */
        font-weight: 600;
    }
</style>

@section Scripts {
    <script>
        // Basit canlı önizleme (demo)
        const nameInput = document.getElementById("cardName");
        const numInput  = document.getElementById("cardNumber");
        const expInput  = document.getElementById("cardExp");

        const namePrev = document.querySelector(".cardNamePreview");
        const numPrev  = document.querySelector(".cardNumberPreview");
        const expPrev  = document.querySelector(".cardExpPreview");

        function formatCardNumber(v){
            v = (v || "").replace(/\D/g, "").slice(0,16);
            return v.replace(/(.{4})/g, "$1 ").trim();
        }

        nameInput?.addEventListener("input", () => {
            namePrev.textContent = (nameInput.value || "AD SOYAD").toUpperCase();
        });

        numInput?.addEventListener("input", () => {
            const f = formatCardNumber(numInput.value);
            numInput.value = f;
            numPrev.textContent = f ? f.replace(/\d(?=\d{4})/g, "•") : "•••• •••• •••• ••••";
        });

        expInput?.addEventListener("input", () => {
            let v = (expInput.value || "").replace(/[^\d]/g, "").slice(0,4);
            if (v.length >= 3) v = v.slice(0,2) + "/" + v.slice(2);
            expInput.value = v;
            expPrev.textContent = v || "AA/YY";
        });
    </script>
}
