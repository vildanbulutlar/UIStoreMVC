@using Application.DTOs.OrderDTOs
@model IEnumerable<OrderDto>

@{
    ViewData["Title"] = "Siparişlerim";
    var hasOrders = Model?.Any() ?? false;

    string StatusClass(object status)
    {
        var s = status?.ToString()?.ToLower() ?? "";
        if (s.Contains("hazırl")) return "md-pill md-pill-soft";
        if (s.Contains("kargo")) return "md-pill md-pill-ghost";
        if (s.Contains("teslim")) return "md-pill md-pill-soft";
        return "md-pill md-pill-ghost";
    }
}

<div class="container my-4">
    <div class="d-flex align-items-start justify-content-between mb-3">
        <div>
            <h2 class="mb-1 fw-bold">Siparişlerim</h2>
            <div class="text-muted small">Son siparişlerini buradan takip edebilirsin.</div>
        </div>
    </div>

    @if (!hasOrders)
    {
        <div class="alert alert-info border-0 rounded-4">
            Henüz hiç siparişiniz bulunmuyor.
        </div>
    }
    else
    {
        <div class="d-grid gap-3">
            @foreach (var order in Model)
            {
                <a asp-action="Details"
                   asp-route-id="@order.Id"
                   class="text-decoration-none text-reset">
                    <div class="card border-0 shadow-sm rounded-4 hover-card">
                        <div class="card-body p-3 p-lg-4">
                            <div class="d-flex justify-content-between align-items-start gap-3">
                                <div class="w-100">
                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        <div class="fw-bold">Sipariş No: @order.Id</div>
                                        <span class="@StatusClass(order.Status)">
                                            <i class="bi bi-truck me-1"></i> @order.Status
                                        </span>
                                    </div>

                                    <div class="text-muted small mt-1">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @order.OrderDate.ToString("dd.MM.yyyy HH:mm")
                                    </div>

                                    @if (order.Items != null && order.Items.Any())
                                    {
                                        var firstItem = order.Items.First();
                                        <div class="text-muted small mt-2">
                                            <i class="bi bi-bag me-1"></i>
                                            @firstItem.ProductName
                                            @if (order.Items.Count > 1)
                                            {
                                                <span> + @(order.Items.Count - 1) ürün</span>
                                            }
                                        </div>
                                    }
                                </div>

                                <div class="text-end" style="min-width:160px;">
                                    <div class="fw-bold fs-5">@order.TotalPrice.ToString("C")</div>
                                    <div class="text-muted small">@order.Items.Count ürün</div>
                                    <div class="text-primary fw-semibold small mt-2">
                                        Detayı Gör <i class="bi bi-chevron-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform .12s ease, box-shadow .12s ease;
    }

        .hover-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 40px rgba(17,24,39,.10) !important;
        }

    /* Checkout ile aynı rozet stili */
    .md-pill {
        border-radius: 999px;
        border: 1px solid rgba(13,110,253,.18);
        background: #fff;
        color: #0d6efd;
        padding: .45rem .75rem;
        font-weight: 600;
    }

    .md-pill-soft {
        background: rgba(13,110,253,.10);
        border-color: rgba(13,110,253,.22);
        color: #0d6efd;
    }

    .md-pill-ghost {
        background: #f8fafc;
        border-color: rgba(17,24,39,.08);
        color: #111827;
    }
</style>
