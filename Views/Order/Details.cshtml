@using Application.DTOs.OrderDTOs
@model OrderDto

@{
    ViewData["Title"] = $"Sipariş Detayı - #{Model.Id}";

    // Durum chip rengi (yeşil yok, mavi ağırlıklı)
    var statusText = Model.Status.ToString() ?? "Bilinmiyor";
    var statusClass = statusText switch
    {
        "Hazırlanıyor" => "status-chip status-info",
        "Kargoda" => "status-chip status-primary",
        "TeslimEdildi" => "status-chip status-muted",
        "İptal" => "status-chip status-danger",
        _ => "status-chip status-muted"
    };
}

<div class="container order-details-page py-4">

    <!-- Header -->
    <div class="d-flex flex-wrap align-items-start justify-content-between gap-3 mb-3">
        <div>
            <h2 class="mb-1 page-title">Sipariş Detayı <span class="text-muted">#@Model.Id</span></h2>
            <div class="text-muted page-sub">
                Sipariş bilgilerini ve ürünlerini buradan takip edebilirsin.
            </div>
        </div>

        <div class="d-flex align-items-center gap-2">
            <span class="@statusClass">
                <i class="bi bi-truck me-1"></i> @statusText
            </span>
            <span class="pill pill-soft">
                <i class="bi bi-shield-check me-1"></i> Güvenli işlem
            </span>
        </div>
    </div>

    <div class="row g-4 align-items-start">

        <!-- Sol kolon -->
        <div class="col-12 col-lg-4">

            <!-- Özet -->
            <div class="card border-0 shadow-sm rounded-4 mb-3">
                <div class="card-body p-3 p-lg-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="h5 mb-0 section-title">Sipariş Özeti</div>
                        <span class="pill pill-light">
                            <i class="bi bi-receipt me-1"></i> Özet
                        </span>
                    </div>

                    <div class="meta-grid">
                        <div class="meta-item">
                            <div class="meta-label">Tarih</div>
                            <div class="meta-value">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>

                        <div class="meta-item">
                            <div class="meta-label">Durum</div>
                            <div class="meta-value">@statusText</div>
                        </div>

                        <div class="meta-item">
                            <div class="meta-label">Toplam Tutar</div>
                            <div class="meta-value price">@Model.TotalPrice.ToString("C")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Adres -->
            <div class="card border-0 shadow-sm rounded-4 mb-3">
                <div class="card-body p-3 p-lg-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="h5 mb-0 section-title">Teslimat Adresi</div>
                        <span class="pill pill-light">
                            <i class="bi bi-geo-alt me-1"></i> Adres
                        </span>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.AddressSummary))
                    {
                        <div class="address-box">
                            <div class="address-icon">
                                <i class="bi bi-house-door"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-semibold">Adres</div>
                                <div class="text-muted small mt-1">@Model.AddressSummary</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info border-0 rounded-4 mb-0">
                            Bu sipariş için adres bilgisi bulunamadı.
                        </div>
                    }
                </div>
            </div>

            <a asp-action="MyOrders" class="btn btn-outline-primary rounded-pill px-3">
                <i class="bi bi-arrow-left me-1"></i> Siparişlerime Dön
            </a>
        </div>

        <!-- Sağ kolon -->
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-3 p-lg-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="h5 mb-0 section-title">Ürünler</div>
                        <span class="pill pill-soft">
                            <i class="bi bi-bag me-1"></i> @((Model.Items?.Count ?? 0)) ürün
                        </span>
                    </div>

                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0 order-table">
                                <thead class="text-muted small">
                                    <tr>
                                        <th>Ürün</th>
                                        <th class="text-end">Adet</th>
                                        <th class="text-end">Birim Fiyat</th>
                                        <th class="text-end">Ara Toplam</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        var lineTotal = item.UnitPrice * item.Quantity;
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="prod-dot"></div>
                                                    <div class="fw-semibold">@item.ProductName</div>
                                                </div>
                                            </td>
                                            <td class="text-end">@item.Quantity</td>
                                            <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end fw-semibold">@lineTotal.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end text-muted">Toplam</th>
                                        <th class="text-end total">@Model.TotalPrice.ToString("C")</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info border-0 rounded-4 mb-0">
                            Bu siparişe ait ürün bulunamadı.
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    /* Genel tipografi (ana sayfaya yakın, italik yok) */
    .order-details-page {
        color: #0f172a;
    }

    .page-title {
        font-weight: 800;
        letter-spacing: -.02em;
    }

    .page-sub {
        font-size: .98rem;
    }

    .section-title {
        font-weight: 800;
        letter-spacing: -.01em;
    }

    /* Pill / chip */
    .pill {
        display: inline-flex;
        align-items: center;
        gap: .35rem;
        padding: .45rem .75rem;
        border-radius: 999px;
        font-size: .88rem;
        border: 1px solid rgba(15,23,42,.10);
        background: #fff;
    }

    .pill-light {
        background: #f8fafc;
    }

    .pill-soft {
        background: rgba(13,110,253,.08);
        border-color: rgba(13,110,253,.20);
        color: #0d6efd;
    }

    .status-chip {
        display: inline-flex;
        align-items: center;
        padding: .45rem .75rem;
        border-radius: 999px;
        font-size: .88rem;
        border: 1px solid rgba(15,23,42,.10);
        background: #fff;
    }

    .status-primary {
        background: rgba(13,110,253,.10);
        border-color: rgba(13,110,253,.22);
        color: #0d6efd;
    }

    .status-info {
        background: rgba(0,160,255,.10);
        border-color: rgba(0,160,255,.22);
        color: #0a58ca;
    }

    .status-muted {
        background: #f8fafc;
        color: #334155;
    }

    .status-danger {
        background: rgba(220,53,69,.10);
        border-color: rgba(220,53,69,.22);
        color: #dc3545;
    }

    /* Özet grid */
    .meta-grid {
        display: grid;
        gap: 12px;
        margin-top: 10px;
    }

    .meta-item {
        padding: 12px;
        border-radius: 16px;
        background: #f8fafc;
        border: 1px solid rgba(15,23,42,.06);
    }

    .meta-label {
        font-size: .78rem;
        color: #64748b;
    }

    .meta-value {
        font-weight: 700;
        margin-top: 2px;
    }

        .meta-value.price {
            color: #0d6efd;
        }

    /* Adres kutusu */
    .address-box {
        display: flex;
        gap: 12px;
        align-items: flex-start;
        padding: 14px;
        border-radius: 18px;
        background: #f8fafc;
        border: 1px solid rgba(15,23,42,.06);
    }

    .address-icon {
        width: 40px;
        height: 40px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(13,110,253,.10);
        color: #0d6efd;
        flex: 0 0 auto;
    }

    /* Ürün tablosu */
    .order-table thead th {
        border-bottom: 1px solid rgba(15,23,42,.08);
    }

    .order-table tbody tr td {
        padding-top: 12px;
        padding-bottom: 12px;
    }

    .prod-dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: #0d6efd;
        opacity: .75;
        box-shadow: 0 8px 18px rgba(13,110,253,.20);
    }

    .order-table tfoot .total {
        font-size: 1.05rem;
        font-weight: 800;
        color: #0f172a;
    }

    /* Kart yuvarlak + shadow zaten bootstrap, ama biraz yumuşatalım */
    .card {
        overflow: hidden;
    }
</style>
