@using Domain.Entities
@using Domain.Enums
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MyShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;600;700&family=DM+Sans:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-store text-primary"></i>
                <strong>MomDev Atelier</strong>
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto align-items-center">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Ana Sayfa
                        </a>
                    </li>

                    @await Component.InvokeAsync("CategoryMenu", new { asDropdown = true })
                </ul>

                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary me-3">
                    <i class="fas fa-shopping-cart"></i> Sepet
                </a>
                @using Domain.Enums

                @if (SignInManager.IsSignedIn(User))
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    var vipActive = currentUser?.IsVipActive == true;
                    var agencyActive = currentUser?.MembershipType == MembershipType.Agency;

                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle d-flex align-items-center gap-2"
                                data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i>
                            Hesabım

                            @* küçük rozetler *@
                            @if (vipActive)
                            {
                                <span class="badge rounded-pill text-bg-warning ms-1">
                                    <i class="bi bi-crown-fill"></i>
                                </span>
                            }
                            @if (agencyActive)
                            {
                                <span class="badge rounded-pill text-bg-info ms-1">
                                    <i class="bi bi-building"></i>
                                </span>
                            }
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Membership" asp-action="Index">
                                    <i class="bi bi-gem"></i> Üyeliklerim
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Order" asp-action="MyOrders">
                                    <i class="bi bi-box-seam"></i> Siparişlerim
                                </a>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-2">
                                    <button class="dropdown-item d-flex align-items-center gap-2" type="submit">
                                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }

                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">
                        Giriş
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                        Üye Ol
                    </a>
                }

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="border-top py-4 mt-5">
        <div class="container text-center text-muted small">
            © 2025 <strong>Vildan Çiçekay Bulutlar</strong> – BilgeAdam Boost
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
