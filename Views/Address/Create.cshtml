@using Application.DTOs.AdressDTOs
@model CreateAddressDto

@{
    ViewData["Title"] = "Yeni Adres Ekle";
}

<div class="container my-4">
    <h2 class="mb-3">Yeni Adres Ekle</h2>

    <form asp-action="Create" asp-controller="Address" method="post">
        @Html.AntiForgeryToken()

        @* UserId’yi gizli alan olarak gönderiyoruz *@
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Country" class="form-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="District" class="form-label"></label>
                <input asp-for="District" class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Line" class="form-label"></label>
            <textarea asp-for="Line" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Line" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>

            <a asp-controller="Order" asp-action="Checkout" class="btn btn-outline-secondary">
                Vazgeç
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
